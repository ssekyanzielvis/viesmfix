# ==============================================
# ViesMFix Project Environment Variables (.env)
# ==============================================
# Notes:
# - Flutter does NOT read .env directly. Pass these to the app via --dart-define
#   (see commands below) or create a dart-define JSON file.
# - Supabase Edge Functions (Deno) read env via the Supabase secrets store.
#   You can mirror the values here and then set them using the CLI (commands below).
# - Do NOT commit real secrets. Keep this file with placeholders only.

ENV=development

# ======================
# Flutter App (dart-define)
# ======================
# Used in lib/src/core/constants/environment.dart via String.fromEnvironment(...)
# How to run (PowerShell):
#   flutter run `
#     --dart-define=TMDB_API_KEY=${env:TMDB_API_KEY} `
#     --dart-define=SUPABASE_URL=${env:SUPABASE_URL} `
#     --dart-define=SUPABASE_ANON_KEY=${env:SUPABASE_ANON_KEY}

TMDB_API_KEY=
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Optionally, you can use a dart-define JSON file instead of env variables:
# Create env.dev.json with:
# {
#   "TMDB_API_KEY": "...",
#   "SUPABASE_URL": "https://YOUR-PROJECT.supabase.co",
#   "SUPABASE_ANON_KEY": "..."
# }
# Run: flutter run --dart-define-from-file=env.dev.json

# ============================
# Supabase Edge Functions (Deno)
# ============================
# These are used by functions in supabase/functions/* via Deno.env.get(...)
# Set them in the Supabase secrets store:
#   supabase secrets set NEWS_API_KEY=... SPORTS_API_KEY=... \
#                        SUPABASE_URL=... SUPABASE_SERVICE_ROLE_KEY=...

# News proxy function
NEWS_API_KEY=

# Sports API/Sync functions (TheSportsDB / Sportmonks key, etc.)
SPORTS_API_KEY=

# Supabase service credentials (server-side only; NEVER put service role in the app)
SUPABASE_SERVICE_ROLE_KEY=

# (Optional) If your functions need explicit URL (usually auto-set in the platform)
# Keep this in sync with SUPABASE_URL above
SUPABASE_FUNCTIONS_URL=

# ======================
# Platform/Tooling Tips
# ======================
# - Android/iOS Firebase Messaging requires google-services files, not .env.
# - For local function testing, export these variables in your shell before running
#   supabase functions serve, or set via supabase secrets.

